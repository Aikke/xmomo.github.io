@media screen and (max-width 1024px)
  .nav
    position absolute
    top 0px
    left 0px
    z-index 30
    -webkit-overflow-scrolling touch
    position absolute
    margin-left -585px
    &.fullscreen
      margin-left 0px
    &.mobile
      margin-left 0px
  .post
    .pjax,.pjax.fullscreen
      padding 0 18px
      max-width 100%
  .full-toc
    .full
      .min:before
        float left
        width 50%
        content "\e98c"
      .max:before
        float left
        width 50%
        content "\e98b"
    #rocket
      &:hover::before
        color #283444
      &.launch:before
        color #449fdb
@media screen and (max-width 426px)
  .nav
    width 100%
    overflow hidden
    &-left
      width 100%
      height auto
    &-right
      width 100%
      height 100%
      overflow-y hidden
      form
        .search
          width 220px
        .cross
          right 116px
    .avatar
      margin 20px auto 15px
    ul
      display none
    &-right nav a
      .post-title
        width 90%
      .post-date
        display none
  .post
    font-size 16px
    .pjax
      padding 0 18px
      max-width 100%
      article
        padding-top 1em
        .article-meta
          font-size 0.7em
          .tag a
            &:before
              border 7px solid transparent
              left -14px
            &:after
              top 4px
        .article-title
          font-size 1.6em
  .full-toc
    .full
      top 0px
      right 0px
      opacity 0.7
    .post-toc-menu
      top 43px
      right 0px
      opacity 0.7
    #rocket
      right -7px
@media screen and (max-width 322px)
  .nav
    &-right form
      .search
        width 165px
      .cross
        right 115px