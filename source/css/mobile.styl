@media screen and (max-width: 1333px)
  .nav
    position: absolute;
    top: 0px;
    left: 0px;
    z-index 10
    -webkit-overflow-scrolling: touch
    position absolute
  .post
    .pjax,.pjax.fullscreen
      padding 0 18px
      max-width 100%
@media screen and (max-width: 426px)
  .nav
    width: 100%
    overflow: hidden
    &-left
      width: 100%
      height: auto
    &-right
      width: 100%
      height: 100%
      overflow-y hidden
      form
        .search
          width 220px
        .cross
          right 116px
    .avatar
      margin: 20px auto 15px
    ul
      display: none
    &-right nav a
      .post-title
        width 90%
      .post-date
        display none
  .post
    font-size 16px
    .pjax
      padding 0 18px
      max-width 100%
      article
        padding-top: 1em
        .article-meta
          font-size: 0.6em
        .article-title
          font-size: 1.2em
  .full-toc
    .full
      top 0px
      right 0px
      opacity: 0.7;
    .post-toc-menu
      top 43px
      right 0px
      opacity: 0.7;
@media screen and (max-width: 322px)
  .nav
    &-right form
      .search
        width 165px
      .cross
        right 115px