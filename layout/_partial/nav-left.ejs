<a href="/" class="avatar" style="background-image:url(<%=theme.avatar%>)"></a>
<div class="author">
    <span><%=config.author%></span>
</div>
<div class="icon">
    <% if(theme.link.rss){%>
    <a class="iconfont icon-rss" title="rss" href="<%= theme.link.rss %>" target="_blank"></a>
    <%}%>
    <% if(theme.link.github){%>
    <a class="iconfont icon-github" title="github" href="<%= theme.link.github %>" target="_blank"></a>
    <%}%>
    <% if(theme.link.weibo){%>
    <a class="iconfont icon-weibo" title="weibo" href="<%= theme.link.weibo %>" target="_blank"></a>
    <%}%>
    <% if(theme.link.twitter){%>
    <a class="iconfont icon-twitter" title="twitter" href="<%= theme.link.twitter %>" target="_blank"></a>
    <%}%>
    <% if(theme.link.facebook){%>
    <a class="iconfont icon-facebook" title="facebook" href="<%= theme.link.weibo %>" target="_blank"></a>
    <%}%>
    <% if(theme.link.linkedin){%>
    <a class="iconfont icon-linkedin" title="linkedin" href="<%= theme.link.linkedin %>" target="_blank"></a>
    <%}%>
    <% if(theme.link.instagram){%>
    <a class="iconfont icon-instagram" title="instagram" href="<%= theme.link.instagram %>" target="_blank"></a>
    <%}%>
    <% if(theme.link.mail){%>
    <a class="iconfont icon-email" title="mail" href="mailto:<%= theme.link.mail %>"></a>
    <%}%>
</div>
<ul>
    <li class="all active">全部文章</li>
    <% site.categories.forEach(function(category, i){ %>
    <li data-rel="<%=category.name%>"> <%=category.name%> </li>
    <% }) %>
</ul>