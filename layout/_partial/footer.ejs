<script src="<%=theme.CDN.pjax%>"></script>
<%- js('js/script') %>
<script>
    /*作者、标签的自动补全*/
    $(function () {
        $('.search').AutoComplete({
            'data': [<% if (theme.author && theme.author.on==true && theme.author.authors.length !=0){ %><% for (var i in theme.author.authors){ %>'@<%=theme.author.authors[i] %>',<%}%><%}%><% site.tags.forEach(function(tag, i){ %>'#<%=tag.name%>',<%})%>],
            'itemHeight': 20,
            'width': 418
        }).AutoComplete('show');
    })
    function initArticle() {
        /*渲染对应的表格样式*/
        <% if(theme.table){ %>
            $(".post .pjax table").addClass("<%=theme.table%>");
        <% } %>

        /*渲染打赏样式*/
        <% if(theme.reward){%>
        $("input[name=pay]").on("click", function () {
            if($("input[name=pay]:checked").val()=="weixin"){
                $(".shang_box .shang_payimg .pay_img").addClass("weixin_img");
            } else {
                $(".shang_box .shang_payimg .pay_img").removeClass("weixin_img");
            }
        })
        <%}%>

        /*高亮代码块行号*/
        <%if(theme.highlight && theme.highlight.on&& theme.highlight.lineNum){%>
        $('pre code').each(function(){
            var lines = $(this).text().split('\n').length - 1;
            var $numbering = $('<ul/>').addClass('pre-numbering').attr("unselectable","on");
            $(this).addClass('has-numbering')
                    .parent()
                    .append($numbering);
            for(i=1;i<=lines;i++){
                $numbering.append($('<li/>').text(i));
            }
        });
        <%}%>

        /*访问数量*/
        <%if(theme.visit_counter && theme.visit_counter.on) {%>
        $.getScript("//dn-lbstatics.qbox.me/busuanzi/2.3/busuanzi.pure.mini.js");
        <%}%>
    }

    /*打赏页面隐藏与展示*/
    <% if(theme.reward){%>
    function dashangToggle() {
        $(".shang_box").fadeToggle();
        $(".hide_box").fadeToggle();
    }
    <%}%>
</script>

<!--加入行号的高亮代码块样式-->
<%if(theme.highlight && theme.highlight.on && theme.highlight.lineNum){%>
<style>
    pre{
        position: relative;
        margin-bottom: 24px;
        border-radius: 3px;
        border: 1px solid #C3CCD0;
        background: #FFF;
        overflow: hidden;
    }
    code.has-numbering{
        padding-left: 40px;
    }
    .pre-numbering{
        margin: 0px;
        position: absolute;
        top: 0;
        left: 0;
        width: 20px;
        padding: 9px 2px 12px 5px;
        text-align: right;
        color: <% if(theme.highlight.theme=="brown-paper"){ %>#616161<%}else{%>#AAA<%}%>;
    }
</style>
<%}%>
<!--自定义样式设置-->
<style>
    <%if(theme.article_list.hover.background){%>
    .nav-right nav a.hover{
        background-color: <%=theme.article_list.hover.background %>;
    }
    <%}%>
    <%if(theme.article_list.hover.color){%>
    .nav-right nav a.hover > span{
        color: <%=theme.article_list.hover.color %>;
    }
    <%}%>

    /*列表样式*/
    <%if(theme.list.theme=="thread"){%>
    .post .pjax article .article-entry>ol, .post .pjax article .article-entry>ul{
        border: #e2dede solid 2px;
        border-radius: 10px;
        padding: 10px 32px 10px 56px;
    }
    .post .pjax article .article-entry li>ol, .post .pjax article .article-entry li>ul{
        padding-top: 5px;
        padding-bottom: 5px;
    }
    .post .pjax article .article-entry>ol>li, .post .pjax article .article-entry>ul>li{
        margin-bottom: auto;
        margin-left: auto;
    }
    .post .pjax article .article-entry li>ol>li, .post .pjax article .article-entry li>ul>li{
        margin-bottom: auto;
        margin-left: auto;
    }
    <%}%>
</style>